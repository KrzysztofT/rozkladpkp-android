<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout 
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        
        <RelativeLayout 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content">
			<org.tyszecki.rozkladpkp.widgets.StationEdit
	        	android:id="@+id/departure_edit"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
				android:layout_toLeftOf="@+id/location_button"
				/>
			<ImageButton 
				android:src="@drawable/ic_mylocation"
				android:id="@+id/location_button" 
				android:layout_width="50dp"
				android:layout_height="50dp"
				android:layout_alignParentRight="true" />
		</RelativeLayout>

		<org.tyszecki.rozkladpkp.widgets.StationEdit
        	android:id="@+id/via_edit"
			android:visibility="gone"        	
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"/>
        	
        <org.tyszecki.rozkladpkp.widgets.StationEdit
        	android:id="@+id/arrival_edit"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"/>
        	
        <RelativeLayout 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content">
	        <org.tyszecki.rozkladpkp.widgets.TimeButton
	        	android:id="@+id/time_button"
	        	android:layout_width="110dip"
	        	android:layout_height="wrap_content"
	        	android:layout_alignParentLeft="true"
	        	/>
	        <org.tyszecki.rozkladpkp.widgets.DateButton
	        	android:id="@+id/date_button"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_toRightOf="@+id/time_button"
				/>
		</RelativeLayout>	
		<org.tyszecki.rozkladpkp.widgets.ProductsButton
        	android:id="@+id/products_button"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
			/>
		<org.tyszecki.rozkladpkp.widgets.AttributesButton
        	android:id="@+id/attributes_button"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
			/>
        <Button
        	android:id="@+id/ok_button"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="OK" />
	</LinearLayout>
</ScrollView>
