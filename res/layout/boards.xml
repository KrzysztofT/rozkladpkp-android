<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="5dp">
        <RelativeLayout 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content">
        	<org.tyszecki.rozkladpkp.StationEdit
	        	android:id="@+id/edittext"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_toLeftOf="@+id/boardsLocation"/>
			<ImageButton android:src="@drawable/ic_mylocation"
				android:id="@+id/boardsLocation" android:layout_width="50dp"
				android:layout_height="50dp" android:layout_alignParentRight="true" />
		</RelativeLayout>
        
        <RelativeLayout 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content">
	        <org.tyszecki.rozkladpkp.TimeButton
	        	android:id="@+id/boardsTimeBut"
	        	android:layout_width="110dip"
	        	android:layout_height="wrap_content"
	        	android:layout_alignParentLeft="true"
	        	/>
	        <org.tyszecki.rozkladpkp.DateButton
	        	android:id="@+id/boardsDateBut"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:layout_toRightOf="@+id/boardsTimeBut"
				/>
		</RelativeLayout>	
        
		<org.tyszecki.rozkladpkp.BoardTypeButton
        	android:id="@+id/boardsTypeBut"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
			/>
		<org.tyszecki.rozkladpkp.ProductsButton
        	android:id="@+id/boardsProdBut"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
			/>
        <Button
        	android:id="@+id/ok"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="OK" />
       	<TextView 
       		android:id="@+id/output"
  			android:layout_width="fill_parent"
  			android:layout_height="fill_parent"/>
  		
</LinearLayout>