<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent">
	<LinearLayout
	        android:orientation="vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:padding="5dp">
	        <RelativeLayout 
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content">
	        	<org.tyszecki.rozkladpkp.StationEdit
		        	android:id="@+id/station_edit"
		        	android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:layout_toLeftOf="@+id/location_button"/>
				<ImageButton 
					android:src="@drawable/ic_mylocation"
					android:id="@+id/location_button" 
					android:layout_width="50dp"
					android:layout_height="50dp" 
					android:layout_alignParentRight="true" />
			</RelativeLayout>
	        
	        <RelativeLayout 
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content">
		        <org.tyszecki.rozkladpkp.TimeButton
		        	android:id="@+id/time_button"
		        	android:layout_width="110dip"
		        	android:layout_height="wrap_content"
		        	android:layout_alignParentLeft="true"
		        	/>
		        <org.tyszecki.rozkladpkp.DateButton
		        	android:id="@+id/date_button"
		        	android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:layout_toRightOf="@+id/time_button"
					/>
			</RelativeLayout>	
	        
			<org.tyszecki.rozkladpkp.TimetableTypeButton
	        	android:id="@+id/type_button"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
				/>
			<org.tyszecki.rozkladpkp.ProductsButton
	        	android:id="@+id/products_button"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
				/>
	        <Button
	        	android:id="@+id/ok_button"
	        	android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:text="OK" />
	</LinearLayout>
</ScrollView>