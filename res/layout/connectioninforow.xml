<?xml version="1.0" encoding="utf-8"?>
<TableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="2">

	<TableRow
		android:layout_marginTop="3dip">
		<ImageView 	
			android:id="@+id/conninfo_dep_icon" 
			android:layout_height="fill_parent"
			android:src="@drawable/departure" />
		<TextView 
			android:id="@+id/conninfo_dep_time"
			android:layout_marginLeft="3dip" />
		<TextView 
			android:id="@+id/conninfo_dep_station"
			android:text="test"
			android:layout_marginLeft="8dip" />
		<LinearLayout
			android:gravity="right"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent">
			<ImageView 
				android:id="@+id/conninfo_time_icon"   
				android:src="@drawable/time"
				android:layout_width="wrap_content"
				android:layout_height="fill_parent"
				/>
			<TextView
				android:id="@+id/conninfo_time"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginLeft="3dip"
				/>
		</LinearLayout>
	</TableRow>
    <TableRow
    	android:layout_marginTop="3dip"
    	android:layout_marginBottom="3dip">				
        <ImageView 
	        android:id="@+id/conninfo_arr_icon" 
	        android:layout_height="fill_parent"
	        android:src="@drawable/arrival"/>
        <TextView
            android:id="@+id/conninfo_arr_time"	
            android:layout_marginLeft="3dip"/>
        <TextView
            android:id="@+id/conninfo_arr_station"	
            android:layout_marginLeft="8dip"/>
	    <TextView
	        android:id="@+id/conninfo_train"
	        android:gravity="right"
	        android:textColor="#000"
	        android:layout_width="wrap_content" 
	        android:layout_marginLeft="3dip"/>	   
</TableRow>
</TableLayout>
